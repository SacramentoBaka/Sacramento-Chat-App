<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@android:color/white"
                android:layout_marginBottom="10dp">

                <ImageButton
                    android:id="@+id/idProfileFragMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_menu_24"
                    android:layout_margin="10dp"
                    android:background="@android:color/transparent"
                    android:layout_gravity="left|center_vertical"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My Profile"
                    android:textColor="@color/red"
                    android:layout_margin="10dp"
                    android:textSize="20sp"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold"/>

                <ImageButton
                    android:id="@+id/idProfileFragEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_edit_24"
                    android:layout_margin="10dp"
                    android:background="@android:color/transparent"
                    android:layout_gravity="right|center_vertical"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardPreventCornerOverlap="false"
                app:cardCornerRadius="50dp"
                android:layout_gravity="center_vertical"
                android:elevation="8dp"
                app:cardElevation="10dp">

                <ImageView
                    android:id="@+id/idProfileFragIMG"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/baseline_person_24"
                    android:clickable="true"
                    android:scaleType="fitCenter" />

            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/idProfileFragName"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:hint="name"
                    android:paddingStart="10dp"
                    android:textSize="25sp"
                    android:textColor="@android:color/black"
                    android:textAlignment="textStart"/>
                <TextView
                    android:id="@+id/idProfileFragProf"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:hint="Profession"
                    android:paddingStart="10dp"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:textAlignment="textStart"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="PRIMARY DETAILS"
            android:padding="5dp"
            android:background="@android:color/darker_gray"
            android:paddingStart="10dp"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textAlignment="textStart"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="Email"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="@android:color/darker_gray"
            android:textSize="15sp"
            android:textAlignment="textStart"/>
        <TextView
            android:id="@+id/idProfileFragEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="Email"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textAlignment="textStart"/>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@android:color/darker_gray"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="Bio"
            android:layout_marginTop="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="@android:color/darker_gray"
            android:textSize="15sp"
            android:textAlignment="textStart"/>
        <TextView
            android:id="@+id/idProfileFragBio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="Bio"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textAlignment="textStart"/>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@android:color/darker_gray"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="Web"
            android:layout_marginTop="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="@android:color/darker_gray"
            android:textSize="15sp"
            android:textAlignment="textStart"/>
        <TextView
            android:id="@+id/idProfileFragWeb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="Web"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textAlignment="textStart"/>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="30dp"
            android:gravity="center">

            <TextView
                android:id="@+id/idProfileFragFollowers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Followers"
                android:padding="5dp"
                android:drawableStart="@drawable/baseline_people_24"
                android:clickable="true"
                android:drawablePadding="5dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@android:color/black"/>
            <TextView
                android:id="@+id/idProfileFragPost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Post"
                android:padding="5dp"
                android:drawableStart="@drawable/baseline_add_photo_alternate_24"
                android:clickable="true"
                android:drawablePadding="5dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@android:color/black"/>

        </LinearLayout>
        <TextView
            android:id="@+id/idProfileFragAddStory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Stories"
            android:padding="5dp"
            android:layout_margin="10dp"
            android:background="@android:color/darker_gray"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textAlignment="center"/>

        <Button
            android:id="@+id/idProfileFragBTN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Send Message"
            android:background="@android:color/darker_gray"
            android:textColor="@android:color/black" />

    </LinearLayout>
</FrameLayout>