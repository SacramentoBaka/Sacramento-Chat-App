<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".PrivacyActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardBackgroundColor="@android:color/white"
        android:layout_marginBottom="100dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account Status"
            android:textColor="@color/red"
            android:textSize="25sp"
            android:layout_gravity="center_vertical"
            android:drawablePadding="5dp"
            android:padding="5dp"
            app:drawableStartCompat="@drawable/baseline_keyboard_arrow_left_24" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Account Pricacy"
        android:textSize="25sp"
        android:textColor="@android:color/black"
        android:padding="5dp"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/idPrivacyStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Public"
        android:textSize="18sp"
        android:layout_margin="10dp"
        android:textColor="@android:color/darker_gray"/>

        <Spinner
            android:id="@+id/idPrivacySpinner"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_gravity="center"/>

    <Button
        android:id="@+id/idPrivacyBTN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="save status"
        android:textColor="@color/black"
        android:background="@color/gray"
        android:layout_margin="20dp"
        android:textStyle="bold"
        />

</LinearLayout>