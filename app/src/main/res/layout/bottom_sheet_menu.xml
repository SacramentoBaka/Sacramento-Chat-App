<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/idCardDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:cardCornerRadius="4dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete Account"
            android:textColor="@color/gray"
            android:textSize="20sp"
            android:fontFamily="sans-serif-condensed-medium"
            android:drawablePadding="10dp"
            android:layout_margin="10dp"
            android:padding="5dp"
            app:drawableStartCompat="@drawable/baseline_delete_24" />

    </androidx.cardview.widget.CardView><androidx.cardview.widget.CardView
        android:id="@+id/idCardPrivacy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:cardCornerRadius="4dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Account Privacy"
            android:textColor="@color/gray"
            android:textSize="20sp"
            android:fontFamily="sans-serif-condensed-medium"
            android:drawablePadding="10dp"
            android:layout_margin="10dp"
            android:padding="5dp"
            app:drawableStartCompat="@drawable/baseline_lock_24" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/idCardLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:cardCornerRadius="4dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:textColor="@color/gray"
            android:fontFamily="sans-serif-condensed-medium"
            android:textSize="20sp"
            android:drawablePadding="10dp"
            android:layout_margin="10dp"
            android:padding="5dp"
            app:drawableStartCompat="@drawable/baseline_power_settings_new_24" />

    </androidx.cardview.widget.CardView>

</LinearLayout>