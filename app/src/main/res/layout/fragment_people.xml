<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PeopleFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="10dp"
            android:background="@android:color/white">

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_gravity="center_vertical|start"
                android:layout_margin="10dp"
                android:layout_marginEnd="12dp"
                app:cardCornerRadius="@dimen/_15sdp"
                app:cardPreventCornerOverlap="false">

                <ImageView
                    android:id="@+id/idHomeFragProfileIMG"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/baseline_person_24"
                    android:clickable="true"
                    android:scaleType="fitCenter" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/idHomeFragCreateBTN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|end|center_vertical"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@drawable/custom_post_background"
                android:fontFamily="sans-serif-condensed-medium"
                android:padding="@dimen/_1sdp"
                android:textAlignment="center"
                android:textSize="@dimen/_9ssp"
                app:drawableStartCompat="@drawable/baseline_add_24" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</FrameLayout>