<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:elevation="@dimen/_5sdp"
    app:cardBackgroundColor="@color/white"
    android:layout_margin="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="@dimen/_5sdp"
            app:cardCornerRadius="25dp"
            app:cardBackgroundColor="@color/white"
            android:layout_gravity="center_vertical"
            app:cardPreventCornerOverlap="false"
            android:elevation="8dp">


            <ImageView
                android:id="@+id/imageView_request"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:clickable="true"
                android:scaleType="centerCrop"
                android:src="@drawable/baseline_person_24" />
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_request_name_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Name"
                android:textAlignment="center"
                android:fontFamily="sans-serif-condensed-medium"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:textSize="@dimen/_12ssp"/>
            <TextView
                android:id="@+id/tv_request_profession_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5ssp"
                android:textColor="@color/gray"
                android:text="Profession"
                android:textAlignment="center"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:textSize="@dimen/_10ssp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="@dimen/_5sdp"
            android:padding="5dp">

            <TextView
                android:id="@+id/decline_request"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="Decline"
                android:fontFamily="sans-serif-condensed"
                android:textSize="12sp"
                android:textAlignment="center"
                android:textColor="#F44336"
                android:padding="5dp"
                android:background="@drawable/custom_post_background"/>

            <TextView
                android:id="@+id/accept_request"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="Accept"
                android:textSize="12sp"
                android:layout_marginTop="@dimen/_10ssp"
                android:fontFamily="sans-serif-condensed-medium"
                android:textColor="@color/red"
                android:padding="5dp"
                android:textAlignment="center"
                android:background="@drawable/custom_post_background"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>